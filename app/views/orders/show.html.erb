<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Paytype:</strong>
  <%= @order.paytype %>
</p>


<br><br>
<div class="cart_show">
  <% Lineitem.where(:cart_id => @cart.id).each do |lineitem| %>
    <ul>
      <li><%= lineitem.quantity %> <%= "  -  " %> <%= lineitem.product.name %></li>
    </ul>
  <% end %>
</div>




<%= link_to 'Edit', edit_order_path(@order) %> |
